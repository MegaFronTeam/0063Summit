mixin sSlider(data)
	// start sSlider
	+b.SECTION.sSlider.section#sSlider&attributes(attributes)
		+b.running-line
			+e.item
				+img(src="img/svg/run-line-1.svg", alt="")
			+e.item как это было
			+e.item
				+img(src="img/svg/run-line-2.svg", alt="")
				+img(src="img/svg/run-line-3.svg", alt="")
			+e.item как это было
			+e.item
				+img(src="img/svg/run-line-4.svg", alt="")
			+e.item как это было
			+e.item
				+img(src="img/svg/run-line-1.svg", alt="")
			+e.item как это было
			+e.item
				+img(src="img/svg/run-line-2.svg", alt="")
				+img(src="img/svg/run-line-3.svg", alt="")
			+e.item как это было
			+e.item
				+img(src="img/svg/run-line-4.svg", alt="")
			+e.item как это было
		+e.slider
			.swiper-wrapper 
				+slideSlider(1)
				+slideSlider(2)
				+slideSlider(3)
				+slideSlider(4)
				+slideSlider(1)
				+slideSlider(2)
				+slideSlider(3)
				+slideSlider(4)
	// end sSlider

mixin slideSlider(i)
	.swiper-slide
		+e.img-wrap(data-fancybox="gallery", href=`img/slide-${i}.png`)
			+img(src=`img/slide-${i}.png`,'bg')